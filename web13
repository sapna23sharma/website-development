    <style>
        /*element selector*/
        div{
           /* background-color: red;*/
    
        }
        /* class selector */
        .red{
           background-color: red;
        }
        /* id selector */
        #green{
            background-color: green;
        }
        /* child selector */
        div > p {
            color: blue;
            background-color:yellow;
        }
        /* desendand selector */
        div p {
            color: blue;
            background-color:yellow;
        }
        *{
            margin: 0;
            padding: 0;

        }


    </style>
</head>
